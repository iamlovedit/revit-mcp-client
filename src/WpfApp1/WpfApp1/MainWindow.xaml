<Window
    x:Class="WpfApp1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="轻装上阵"
    Width="800"
    Height="450"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="36" />
            <RowDefinition />
            <RowDefinition Height="36" />
        </Grid.RowDefinitions>
        <TextBlock VerticalAlignment="Center" Text="注册智谱账号 ">
            <Hyperlink Click="Hyperlink_Click" NavigateUri="https://www.bigmodel.cn/invite?icode=awKPl7uh6hzsxcGg7rgbOQZ3c5owLmCCcMQXWcJRS8E%3D">
                https://www.bigmodel.cn/invite?icode=awKPl7uh6hzsxcGg7rgbOQZ3c5owLmCCcMQXWcJRS8E%3D
            </Hyperlink>
        </TextBlock>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock VerticalAlignment="Center" Text="输入智谱api key" />
            <TextBox
                x:Name="ApiKeyTextBox"
                Grid.Column="1"
                Height="28"
                Margin="8,0,0,0"
                VerticalContentAlignment="Center" />
        </Grid>
        <TextBox
            x:Name="OutputTextBox"
            Grid.Row="2"
            Padding="8"
            AcceptsReturn="True"
            FontFamily="Consolas"
            FontSize="14"
            IsReadOnly="True"
            VerticalScrollBarVisibility="Auto" />
        <Button
            x:Name="StartButton"
            Grid.Row="3"
            Width="200"
            Height="32"
            VerticalAlignment="Bottom"
            Click="StartButton_Click"
            Content="开始配置环境" />
    </Grid>
</Window>
