<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="轻装上阵" Height="450" Width="800">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition/>
            <RowDefinition Height="36"/>
        </Grid.RowDefinitions>
        <TextBlock Text="注册智谱账号 " 
                   HorizontalAlignment="Center"
            VerticalAlignment="Center">
     <Hyperlink 
         Click="Hyperlink_Click"
         NavigateUri="https://www.bigmodel.cn/invite?icode=awKPl7uh6hzsxcGg7rgbOQZ3c5owLmCCcMQXWcJRS8E%3D">
         https://www.bigmodel.cn/invite?icode=awKPl7uh6hzsxcGg7rgbOQZ3c5owLmCCcMQXWcJRS8E%3D
     </Hyperlink>
        </TextBlock >
        <TextBox x:Name="OutputTextBox"
                 FontFamily="Consolas"
                 FontSize="14"
                 IsReadOnly="True"
                 Grid.Row="1"
                 Padding="8"
                 VerticalScrollBarVisibility="Auto"
                 AcceptsReturn="True"/>
        <Button Content="开始配置环境" 
                Grid.Row="2"
                Height="32"
                VerticalAlignment="Bottom"
                x:Name="StartButton"
                Click="StartButton_Click"
                Width="200"/>
    </Grid>
</Window>
